<p class = "notice"><%= notice %></p>

<div class = "margin">

    <h1>Books</h1>
    <div class = "index_head">
        <h4 class = "index_title">Title</h4>
        <h4 class = "index_body">Body</h4>
    </div>

        <% @books.each do |book| %>
            <div class = "index_main">
                <span class = "book_title"><%= book.title %></span>
                <span class = "book_body"><%= book.body %></span>
                <span class = "links"><%= link_to "show", show_room_path(book.id) %></span>
                <span class = "links"><%= link_to "edit", edit_room_path(book.id) %></span>
                <span class = "links"><%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></span>
            </div>
        <% end %>




    <div>
        <h1>NewBook</h1>
        <%= form_with model:@book, url:'/books',local:true do |f| %>
                <% if @book.errors.any? %>
                    <div id="error_explanation">
                        <ul class = "error_list">
                            <h4 class = "error_title"><%= pluralize(@book.errors.count, "error") %> prohibited this map from being saved:</h2>

                            <% @book.errors.full_messages.each do |message| %>
                                <li class="error_msg"><%= message %></li>
                            <% end %>

                        </ul>
                    </div>
                <% end %>


        <h4>Title</h4>
        <%= f.text_field :title %>
            <h4>Body</h4>
            <%= f.text_area :body %>
            <div>
                <%= f.submit 'Create Book' %>
            </div>
        <% end %>
    </div>

</div>