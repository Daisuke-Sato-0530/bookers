<%= notice %>


<h1>Books</h1>
<h4>Title</h4><h4>Body</h4>
<% @book.each do |book| %>
<span><%= book.title %></span>
<span><%= book.body %></span>
<%= link_to "show", show_room_path(book.id) %>
<%= link_to "edit", edit_room_path(book.id) %>
<%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>

<h1>NewBook</h1>
<%= form_with model:@book, url:'/books',local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
